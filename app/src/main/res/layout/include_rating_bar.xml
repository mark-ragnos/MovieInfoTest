<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ProgressBar
        android:id="@+id/rating_bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_background"
        android:max="100"
        android:progress="24"
        android:indeterminate="false"
        android:elevation="4dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/circle_style"
        app:layout_constraintEnd_toEndOf="@+id/info_add_to_favorite"
        app:layout_constraintStart_toStartOf="@+id/info_add_to_favorite"
        app:layout_constraintTop_toBottomOf="@+id/info_add_to_favorite" />

    <TextView
        android:id="@+id/rating_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="?attr/colorOnBackground"
        app:layout_constraintBottom_toBottomOf="@+id/rating_bar"
        app:layout_constraintEnd_toEndOf="@+id/rating_bar"
        app:layout_constraintStart_toStartOf="@+id/rating_bar"
        app:layout_constraintTop_toTopOf="@+id/rating_bar"
        tools:text="21%" />

</merge>