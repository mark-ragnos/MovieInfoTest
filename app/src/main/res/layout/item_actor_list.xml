<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/actor_poster"
        android:layout_width="100dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/actor_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/actor_poster"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actor_poster" />

    <TextView
        android:id="@+id/actor_in_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/in_role"
        app:layout_constraintEnd_toEndOf="@+id/actor_name"
        app:layout_constraintStart_toStartOf="@+id/actor_name"
        app:layout_constraintTop_toBottomOf="@+id/actor_name" />

    <TextView
        android:id="@+id/actor_role"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/actor_in_role"
        app:layout_constraintStart_toStartOf="@+id/actor_in_role"
        app:layout_constraintTop_toBottomOf="@+id/actor_in_role" />

</androidx.constraintlayout.widget.ConstraintLayout>