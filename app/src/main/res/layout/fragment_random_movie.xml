<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:elevation="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:theme="@style/ToolbarColoredBackArrow"
            app:title="@string/random_title" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".presentation.ui.random.RandomMovieFragment">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/gen_tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/gen_year"
            android:textColor="?attr/colorOnBackground"
            android:textSize="@dimen/def_item_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/gen_in_year"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/gen_in_year"
            tools:viewBindingIgnore="true" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/gen_in_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="@string/enter_year"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="?attr/colorOnBackground"
            android:textSize="@dimen/def_item_size"
            app:layout_constraintStart_toEndOf="@+id/gen_tv_year"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/gen_tv_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:text="@string/gen_genre"
            android:textColor="?attr/colorOnBackground"
            android:textSize="@dimen/def_item_size"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gen_tv_year"
            tools:viewBindingIgnore="true" />

        <com.skydoves.powerspinner.PowerSpinnerView
            android:id="@+id/gen_in_genre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/select_genre"
            android:textSize="@dimen/def_item_size"
            app:layout_constraintEnd_toEndOf="@+id/gen_in_year"
            app:layout_constraintStart_toStartOf="@+id/gen_in_year"
            app:layout_constraintTop_toTopOf="@+id/gen_tv_genre"
            app:spinner_arrow_gravity="end"
            app:spinner_arrow_show="true"
            app:spinner_arrow_tint="?attr/colorSecondary"
            app:spinner_popup_background="?attr/colorSurface" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/gen_btn_random"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:enabled="true"
            android:text="@string/get_random"
            android:textSize="@dimen/def_item_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gen_tv_genre" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gen_btn_random"
            tools:listitem="@layout/item_random_movie" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>